<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Navigation_Container"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:minWidth="25px"
    android:minHeight="25px"
    android:gravity="top">
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/Navigation_ProfileBannerImage"
      android:visibility="visible"
      android:background="#00000000"
      android:scaleType="centerCrop" />
  <ImageView
      android:layout_width="80dp"
      android:layout_height="65dp"
      android:id="@+id/Navigation_ProfileImage"
      android:visibility="visible"
      android:background="#00000000"
      android:layout_marginBottom="50dp"
      android:layout_marginLeft="15dp"
      android:layout_gravity="bottom" />
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#88000000"
      android:paddingTop="5dp"
      android:paddingBottom="5dp"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:layout_gravity="bottom">
    <TextView
        android:text="Login"
        android:id="@+id/Navigation_UserName"
        android:textSize="18dp"
        android:background="#00000000"
        android:textColor="?Secondary_Text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" />
    <ImageButton
        android:id="@+id/Navigation_SettingsButton"
        app:srcCompat="@drawable/ic_settings_white_24px"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
  </LinearLayout>
</FrameLayout>